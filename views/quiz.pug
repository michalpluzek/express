extends layout

block content
  h1= title
  if show
    form(method='post')
      p Jaka jest Twoja ulubiona pora roku?
      ul 
        each item in data 
          li 
            label=item.title 
            input(type='radio' name='quiz' value=item._id)
      input(type="submit" value='Zagłosuj')
      p Aby zobaczyć wyniki oddaj głos
  else 
    h1 Już oddałeś głos 
    p Wyniki
    ul
      each item in data 
        li #{item.title} - głosów: #{item.vote} (#{(item.vote/sum*100).toFixed(2)}%)
        //- li #{item.title} - głosów: #{item.vote} (#{Math.round(item.vote/sum*100)}%)
    p Ilość oddanych głosów: #{sum}

        